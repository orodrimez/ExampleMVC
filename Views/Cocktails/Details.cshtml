@model CocktailDetailsViewModel
@{
    ViewData["Title"] = Model.Cocktail.Name;
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <img src="@Model.Cocktail.Thumbnail" class="card-img-top" alt="@Model.Cocktail.Name" />
                <div class="card-body">
                    <h2 class="card-title text-center">@Model.Cocktail.Name</h2>
                    <p class="mt-3">@Model.Cocktail.Instructions</p>

                    <h4 class="mt-4">Ingredientes</h4>
                    <ul class="list-group list-group-flush mb-4">
                        @foreach (var ing in Model.Cocktail.Ingredients)
                        {
                            <li class="list-group-item">
                                <strong>@ing.Name</strong>
                                @if (!string.IsNullOrWhiteSpace(ing.Measure))
                                {
                                    <span class="text-muted">— @ing.Measure</span>
                                }
                            </li>
                        }
                    </ul>


                    @{
                        var action = Model.IsFavorite ? "RemoveFavorite" : "AddFavorite";
                        var btnClass = Model.IsFavorite ? "btn-danger" : "btn-success";
                        var btnText = Model.IsFavorite ? "Quitar de favoritos" : "Agregar a favoritos";
                    }

                    <form asp-action="@action" method="post" class="text-center">
                        <input type="hidden" name="Id" value="@Model.Cocktail.Id" />
                        <button type="submit" class="btn @btnClass">
                            @btnText
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>